/* company.wxss */
page {
  background-color: #eaeaea;
}
/* tab */
.tab-left{
  box-sizing: border-box;
  display: flex;
  height: 101rpx;
  align-items: center;
  line-height: 101rpx;
  background-color: #fff;
}
.tab-left view{
  flex: 1;
  height: 100%;
  text-align: center;
  margin-right: 0;
}
.tab-left view::before {
  display: none;
}
.tab-left view:not(:last-child) {
  border-right: solid 1px #d8d8d8;
}
.tab-left .active{
  color:#353535;
  background-color: #eaeaea;
}
.tab-left .active::before{
  background-color: #ff6801;
  display: block;
}
.tab-right{
  margin-bottom: 102rpx;
}
.tab-right .right-item{

  display: none;
}
.tab-right .right-item.active{
  display: block;
}
/* 公司档案 */
.company-name {
  font-size: 42rpx;
  padding: 30rpx 30rpx;
}
.company-desc {
  padding: 0 30rpx 30rpx;
}
.company-pic {
  padding: 0 30rpx;
}
.company-introduce {
  text-indent: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.company-infos image {
  width: 100%;
}
.top {
  justify-content: space-between;
  height: 88rpx;
}
.top .left {
  font-size:28rpx;
}
.icon image {
  width:34rpx;
  height:44rpx;
}
.address {
  padding: 13rpx 30rpx 56rpx;
}
.address textarea {
  width: 100%;
}
.item {
  height: 86rpx;
  border-bottom: 1px solid #e5e5e5;
}
.basic-info .left {
  width: 50%;
}
.basic-info > view:last-child {
  border: none;
}
.basic-info .value{
  padding-right: 20rpx;
  flex: 1;
  text-align: right;
}
/* 口碑 */
.user-comment {
  justify-content: space-between;
  padding: 47rpx 24rpx 20rpx 24rpx;
}
.user-name {
  flex: 1;
  text-align: left;
  margin-left: 20rpx;
}
.user-avator image {
  width: 65rpx;
  height: 65rpx;
}
.user-content {
  padding: 0 20rpx 20rpx 0rpx;
  margin-left: 105rpx;
  margin-bottom: 10rpx;
}
/* 施工记录 */
.record {
  padding: 30rpx;
}
.record-info {
  margin: 10rpx 0 20rpx 0;
}
.record-info text {
  margin-right: 40rpx;
}
.record-pic {
  width: 100%;
}
.record-number {
  justify-content: space-between;
  height: 80rpx;
}
.record-value {
  color: black;
}
.record .goods {
  width: 48rpx;
  height: 48rpx;
}
/* footer */
.confirm {
  bottom: 0rpx;
  height: 96rpx;
}
